<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonsFragment"
    android:id="@+id/scrollview"
   >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ultra"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:text="Search Any Topic"
        android:textColor="@color/colorTextPrimary"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shadow_searchbar"
        android:paddingHorizontal="20dp"
        android:paddingBottom="7dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Search anything"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:singleLine="true"
            android:inputType="text" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:src="@drawable/baseline_search_24"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:text="You're progress"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:textAlignment="center"
        android:gravity="center"
         />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>

    <TextView
        android:id="@+id/Verbs_and_tenses"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:text="Verbs and Tenses"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:gravity="center"

        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <TextView
        android:id="@+id/Nouns_articles_adjectives"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:paddingLeft="30dp"
        android:text="Nouns, Articles and Adjectives"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:gravity="center"
        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <TextView
        android:id="@+id/Pronouns_and_possessives"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:paddingLeft="30dp"
        android:text="Pronouns and Possessives"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:gravity="center"
        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <TextView
        android:id="@+id/Prepositions"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:paddingLeft="30dp"
        android:text="Prepositions"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:gravity="center"
        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <TextView
        android:id="@+id/Compound_sentences_connectors"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:paddingLeft="30dp"
        android:text="Compound Sentences and Connectors"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:gravity="center"
        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <TextView
        android:id="@+id/Questions_and_negations"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:paddingLeft="30dp"
        android:text="Questions and Negations"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:gravity="center"
        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <TextView
        android:id="@+id/Modal_verbs"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:paddingLeft="30dp"
        android:text="Modal Verbs"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:gravity="center"
        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <TextView
        android:id="@+id/Common_phrases_sentence_patterns"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/ultra"
        android:paddingLeft="30dp"
        android:text="Common Phrases and Sentence Patterns"
        android:textSize="25dp"
        android:textColor="@color/colorTextPrimary"
        android:padding="20dp"
        android:background="@drawable/lesson_topic_background"
        android:gravity="center"
        />
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
    <include layout="@layout/item_lesson"/>
 </LinearLayout>
</ScrollView>