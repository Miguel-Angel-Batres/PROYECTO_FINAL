<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/shadow_border" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="35dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/colorTextPrimary"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="9dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorSurface"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/checkmark_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/outline_check_circle_24"
                    android:visibility="gone"
                    android:elevation="4dp"
                    app:tint="@color/colorCorrect" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lesson_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Example Text"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="15sp"
                        android:fontFamily="@font/ultra"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/lesson_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtitle Example"
                        android:textColor="@color/colorSecondary"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/ultra" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/lesson_image"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>