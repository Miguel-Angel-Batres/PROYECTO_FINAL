<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:background="@color/colorBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/reward_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/trophy"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reward_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maestro Verbal"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/ultra"/>

        <TextView
            android:id="@+id/reward_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa la secciÃ³n 'Verbos y Tiempos'."
            android:textSize="12sp"
            android:textColor="@color/colorSurface"
            android:fontFamily="@font/ultra"/>
    </LinearLayout>

    <TextView
        android:id="@+id/reward_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+150 XP"
        android:textSize="18sp"
        android:textColor="@color/colorCorrect"
        android:textStyle="bold"/>
</LinearLayout>